datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  uuid String @id @default(cuid())

  email    String @unique
  password String

  containers Container[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ContainerType {
  Plot
  Bag
}

model Container {
  uuid       String        @id @default(cuid())
  type       ContainerType
  dirthDepth Float         @default(0)

  user     User   @relation(fields: [userUuid], references: [uuid])
  userUuid String

  plants Plant[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userUuid])
}

enum PlantType {
  NONE
  TOMATO
  POTATO
  CARROT
  ONION
  CUCUMBER
  PEPPER
  PEA
  BROCCOLI
  CABBAGE
  CORN
  BEAN
  BEET
  CELERY
  EGGPLANT
  GARLIC
  GINGER
  GREEN_BEAN
  KALE
  LETTUCE
  MUSTARD
  SQUASH
  WATERMELON
}

model Plant {
  uuid    String    @id @default(cuid())
  variety String
  type    PlantType

  plantedSeedsOn  DateTime @default(now())
  seedsSproutedOn DateTime @default(now())

  container     Container @relation(fields: [containerUuid], references: [uuid])
  containerUuid String

  heightRegistrations HeightRegistration[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([containerUuid])
}

model HeightRegistration {
  uuid   String @id @default(cuid())
  height Float  @default(0)

  plant     Plant  @relation(fields: [plantUuid], references: [uuid])
  plantUuid String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([plantUuid])
}
